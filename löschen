    <script>
        // Animierte Infokarten und Preiskarten beim Scrollen einblenden
        function revealCards() {
            const cards = document.querySelectorAll('.feature-card, .pricing-card');
            const trigger = window.innerHeight * 0.92;
            cards.forEach((card, i) => {
                const top = card.getBoundingClientRect().top;
                if (top < trigger) {
                    setTimeout(() => card.classList.add('visible'), i * 80);
                }
            });
        }
        window.addEventListener('scroll', revealCards);
        window.addEventListener('load', revealCards);
        // FAQ Animation
        document.querySelectorAll('.faq-question').forEach(btn => {
            btn.addEventListener('click', function() {
                const item = this.parentElement;
                item.classList.toggle('open');
            });
        });
        // Dark/Light Mode Umschalter
        const modeToggle = document.getElementById('mode-toggle');
        let darkMode = true;
        modeToggle.addEventListener('click', () => {
            darkMode = !darkMode;
            document.body.classList.toggle('light-mode', !darkMode);
            modeToggle.innerHTML = darkMode ? '<i class="fas fa-moon"></i>' : '<i class="fas fa-sun"></i>';
        });
        // Light-Mode Styles
        const style = document.createElement('style');
        style.innerHTML = `
        body.light-mode {
            --bg: #f4f6fb;
            --bg-light: #fff;
            --text: #181a20;
            --text-muted: #555;
            --card-bg: #f8fafc;
            --card-border: #e5e7eb;
            --accent: #3b82f6;
        }
        body.light-mode .sticky-footer { background: #fff; color: #555; border-top: 1px solid #e5e7eb; }
        body.light-mode .navbar { background: #fff; }
        body.light-mode .navbar-link, body.light-mode .navbar-logo { color: #181a20; }
        body.light-mode .navbar-link.active { color: #3b82f6; }
        body.light-mode .navbar-link.active::after { background: #3b82f6; }
        body.light-mode .login-btn, body.light-mode .cta-btn, body.light-mode .newsletter-form button, body.light-mode .pricing-btn, body.light-mode .chat-form button { background: #3b82f6; color: #fff; }
        body.light-mode .login-btn:hover, body.light-mode .cta-btn:hover, body.light-mode .newsletter-form button:hover, body.light-mode .pricing-btn:hover, body.light-mode .chat-form button:hover { background: #2563eb; }
        `;
        document.head.appendChild(style);
        // FAQ Suche
        function filterFAQ(val) {
            val = val.toLowerCase();
            document.querySelectorAll('.faq-item').forEach(item => {
                const q = item.querySelector('.faq-question').textContent.toLowerCase();
                const a = item.querySelector('.faq-answer').textContent.toLowerCase();
                item.style.display = (q.includes(val) || a.includes(val)) ? '' : 'none';
            });
        }
        // Live-Chat Widget
        const chatBtn = document.getElementById('chat-widget-btn');
        const chatWidget = document.getElementById('chat-widget');
        const chatClose = document.getElementById('chat-close');
        const chatForm = document.getElementById('chat-form');
        const chatBody = document.getElementById('chat-body');
        chatBtn.onclick = () => chatWidget.style.display = 'flex';
        chatClose.onclick = () => chatWidget.style.display = 'none';
        chatForm.onsubmit = function(e) {
            e.preventDefault();
            const input = document.getElementById('chat-input');
            if(input.value.trim()) {
                chatBody.innerHTML += `<div class='chat-msg chat-msg-user'>${input.value}</div>`;
                setTimeout(() => {
                    chatBody.innerHTML += `<div class='chat-msg chat-msg-bot'>Danke für deine Nachricht! Wir melden uns schnellstmöglich.</div>`;
                    chatBody.scrollTop = chatBody.scrollHeight;
                }, 700);
                input.value = '';
                chatBody.scrollTop = chatBody.scrollHeight;
            }
        };
        // Sprachauswahl (nur Demo, kein echter Wechsel)
        document.getElementById('lang-switch').addEventListener('change', function() {
            alert('Sprachumschaltung ist in dieser Demo nicht aktiv.');
        });
        // Erfolgsmeldung/Microfeedback anzeigen
        function showSuccess(msg) {
            const toast = document.getElementById('success-toast');
            const text = document.getElementById('success-text');
            text.textContent = msg;
            toast.style.display = 'flex';
            toast.style.opacity = '1';
            setTimeout(() => {
                toast.style.opacity = '0';
                setTimeout(() => { toast.style.display = 'none'; }, 400);
            }, 2200);
        }
        // Newsletter-Formular Microfeedback
        const newsletterForm = document.querySelector('.newsletter-form');
        if(newsletterForm) {
            newsletterForm.onsubmit = function(e) {
                e.preventDefault();
                showSuccess('Du bist jetzt für den Newsletter angemeldet!');
                this.reset();
            };
        }
        // Kontaktformular Microfeedback
        const contactForm = document.querySelector('.contact-form');
        if(contactForm) {
            contactForm.onsubmit = function(e) {
                e.preventDefault();
                showSuccess('Nachricht erfolgreich gesendet!');
                this.reset();
            };
        }
        // Scroll-to-Top Button
        const scrollTopBtn = document.getElementById('scrollTopBtn');
        window.addEventListener('scroll', function() {
            if(window.scrollY > 300) {
                scrollTopBtn.style.display = 'flex';
            } else {
                scrollTopBtn.style.display = 'none';
            }
        });
        scrollTopBtn.onclick = function() {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        };
        // Navigation: active-Klasse dynamisch setzen
        document.querySelectorAll('.navbar-link').forEach(link => {
            link.addEventListener('click', function(e) {
                // Bei Ankernavigation (z.B. #contact) Seite nicht neu laden
                if (this.getAttribute('href').startsWith('#')) {
                    e.preventDefault();
                    // Zum Ziel scrollen
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        window.scrollTo({ top: target.offsetTop - 70, behavior: 'smooth' });
                    }
                }
                // Alle Links "deaktivieren"
                document.querySelectorAll('.navbar-link').forEach(l => l.classList.remove('active'));
                // Diesen Link "aktivieren"
                this.classList.add('active');
            });
        });
    </script>
